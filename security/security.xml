<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="groups_category" model="ir.module.category">
        <field name="name">group Category</field>
    </record>

    <record id="group_a" model="res.groups">
        <field name="name">Group A</field>
        <field name="category_id" ref="training.groups_category"/>

    </record>
    <record id="group_b" model="res.groups">
        <field name="name">Group B</field>
        <field name="category_id" ref="training.groups_category"/>
        <field name="implied_ids" eval="[(4, ref('training.group_a'))]"/>


    </record>
    <record id="group_c" model="res.groups">
        <field name="name">Group C</field>
        <field name="category_id" ref="training.groups_category"/>
        <field name="implied_ids" eval="[(4, ref('training.group_b'))]"/>


    </record>


    <record id="user_create_rule" model="ir.rule">
        <field name="name">only see what you create</field>
        <field name="model_id" ref="training.model_property"/>
        <field name="active" eval="True"/>
        <field name="domain_force">[('create_uid','=',user.id)]</field>
        <field name="groups" eval="[(4, ref('training.group_a'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_create" eval="True"/>

    </record>
    <record id="user_see_gnder_male_rule" model="ir.rule">
        <field name="name">user see gnder male</field>
        <field name="model_id" ref="training.model_property"/>
        <field name="active" eval="True"/>
        <field name="domain_force">[('gender','=', 'male')]</field>
        <field name="groups" eval="[(4, ref('training.group_a'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_unlink" eval="True"/>
        <field name="perm_create" eval="True"/>

    </record>

        <record id="user_see_only_gender_male" model="ir.rule">
            <field name="name">user see only gender male</field>
            <field name="model_id" ref="training.model_property"/>
            <field name="active" eval="True"/>
            <field name="domain_force">[('gender','=', 'female')]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_unlink" eval="True"/>
                        <field name="perm_create" eval="True"/>
                        <field name="groups" eval="[(4, ref('training.group_b'))]"/>

        </record>
